def pascal(depth, pos):
    if depth == pos:
        return 1
    elif depth <= -1 or pos <= -1:
        return 0
    else:
        return pascal(depth - 1, pos) + pascal(depth - 1, pos - 1)


def pascal_triangle(row_depth):
    for x in range(0, row_depth, 1):
        list = []
        for y in range(0, (x + 1), 1):
            list.append(pascal(x, y))
        print list

def main():
    pascal_triangle(15)


if __name__ == "__main__":
    main()
